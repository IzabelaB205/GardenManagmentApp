<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/child_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstname_text_view"
        android:text="@string/firstname_text_view"
        android:textStyle="bold"
        android:paddingLeft="8dp"
        android:layout_below="@+id/child_image_view"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstname_edit_text"
        android:layout_below="@+id/child_image_view"
        android:layout_toRightOf="@+id/firstname_text_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastname_text_view"
        android:text="@string/lastname_text_view"
        android:textStyle="bold"
        android:paddingLeft="8dp"
        android:layout_below="@+id/firstname_text_view"
        android:layout_marginRight="8dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lastname_edit_text"
        android:layout_below="@+id/firstname_edit_text"
        android:layout_toRightOf="@+id/lastname_text_view"
        />
</RelativeLayout>